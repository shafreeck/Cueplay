{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@cueplay/lease-core": [
                "packages/lease-core/dist"
            ],
            "@cueplay/playback-core": [
                "packages/playback-core/dist"
            ],
            "@cueplay/room-core": [
                "packages/room-core/dist"
            ],
            "@cueplay/protocol": [
                "packages/protocol/dist"
            ],
            "@cueplay/sync-core": [
                "packages/sync-core/dist"
            ]
        }
    }
}